{{- $ci        := false -}}
{{- $headless  := false -}}
{{- $ephemeral := false -}}
{{- "" -}}

{{- if (env "GITHUB_CI") -}}
{{-   $ci        = true -}}
{{-   $headless  = true -}}
{{-   $ephemeral = true -}}
{{- end -}}

useBuiltinAge = true
useBuiltinGit = true

[edit]
command = "nvim"

[diff]
command = "nvim"
args = ["-d", "{{ "{{ .Destination }}" }}", "{{ "{{ .Target }}" }}"]
exclude = ["scripts"]

[merge]
command = "nvim"
args = ["-d", "{{ "{{ .Destination }}" }}", "{{ "{{ .Source }}" }}","{{ "{{ .Target }}" }}"]

encryption = "age"
[age]
{{ if $ci -}}
identity = "/opt/agekey.txt"
{{ else -}}
identity = "~/.keybase/secret/agekey.txt"
{{ end -}}

recipients = [
    "age1fj55jsq3g8pck8fhevxglzzymqnzdqm6sluvadmk6es48cayy33smmwcz4",
    "age1tduwep92y009u8dg0ewvu25ez5ajkupu840kudsy5c0v76w7m5cqqhxl9r"
]

[git]
autoCommit = true
autoPush = false
